<%- include('templates/header') %>

  <main class="container py-5">
    <h1 class="neon-heading text-center mb-5">Users</h1>

    <div class="row g-4 justify-content-center">
      <% users.forEach(user=> { %>
        <div class="col-12 col-md-8 col-lg-6">
          <div class="neon-card p-3 d-flex justify-content-between align-items-center">
            <div class="neon-text fs-5">
              <strong>
                <%= user.name %>
              </strong> (<%= user.user_type %>)
            </div>
            <% if (user.user_type==='user' ) { %>
              <a href="/admin/promote/<%= user._id %>" class="btn btn-outline-success btn-sm neon-btn">
                Promote
              </a>
              <% } else { %>
                <a href="/admin/demote/<%= user._id %>" class="btn btn-outline-danger btn-sm neon-btn">
                  Demote
                </a>
                <% } %>
          </div>
        </div>
        <% }) %>
    </div>
  </main>

  <%- include('templates/footer') %>