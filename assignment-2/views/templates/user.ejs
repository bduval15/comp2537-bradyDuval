<li class="list-group-item d-flex justify-content-between align-items-center">
  <div>
    <strong><%= user.name %></strong> (<%= user.user_type %>)
  </div>
  <% if (user.user_type === 'user') { %>
    <a href="/admin/promote/<%= user._id %>" class="btn btn-sm btn-success me-1">Promote</a>
  <% } else { %>
    <a href="/admin/demote/<%= user._id %>" class="btn btn-sm btn-warning me-1">Demote</a>
  <% } %>
</li>